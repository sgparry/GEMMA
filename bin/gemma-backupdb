. /etc/GEMMA
prefix=$(dirname $(dirname $0))
. ${prefix}/lib/GEMMA/functions.sh
if [ "$functions_inc" = "" ]; then
  exit -1
fi

check_root

echo ""
echo "GEMMA MOODLE DB BACKUP SCRIPT"
echo "============================="
echo ""
if [ -z $1 ]; then
  echo "usage:"
  echo "    $(basename $0) (domain|domain/path)"
  echo ""
  echo "where:"
  echo "    domain  = domain name of the site e.g. example.com"
  echo "    path    = path within the site e.g. /lms "
  echo ""
  echo "example:"
  echo ""
  echo "    $(basename $0) example.org/lms"
  echo ""
  echo "Semi-automates the backup of a moodle site database. The script performs the following steps:"
  echo "- Backs up site database data."
  echo ""
  exit -1
fi

parse_site_address $1
set_main_dirs
print_main_dirs
check_main_dirs
set_db_name
set_db_user
set_db_pass
set_backup_dirs
print_backup_dirs
check_backup_dirs
do_db_backup

