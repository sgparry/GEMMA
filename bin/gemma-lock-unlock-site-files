. /etc/GEMMA
prefix=$(dirname $(dirname $0))
. ${prefix}/lib/GEMMA/functions.sh
if [ "$functions_inc" = "" ]; then
	exit -1
fi

check_root

echo ""
echo "GEMMA MOODLE LOCK SITE FILES SCRIPT"
echo "==================================="
echo ""
if [ -z $1 ]; then
	echo "usage:"
	echo "    $(basename $0) (domain|domain/path) [lock|unlock]"
	echo ""
	echo "where:"
	echo "    domain  = domain name of the site e.g. example.com"
	echo "    path    = path within the site e.g. /lms "
	echo "    lock    = prevent write access to site files"
	echo "    unlock  = allow write access to site files"
	echo ""
	echo "example:"
	echo ""
	echo "    $(basename $0) example.org/lms lock"
	echo ""
	echo "Semi-automates the protection of a Moodle site."
	echo "The script performs the following steps:"
	echo "- Corrects the permissions."
	echo ""
	exit -1
fi

args_parse_site_address $1
env_set_main_dirs
env_print_main_dirs
fs_check_main_dirs
if [ "$3"=="correctall" ]; then
	fs_correct_permissions $2
else
	a2fs_lock_unlock_write_permissions $2
fi
